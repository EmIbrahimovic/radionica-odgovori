{
  "image": "mcr.microsoft.com/devcontainers/python:3",
  "forwardPorts": [5000],
  "postCreateCommand": "pip install -r requirements.txt",
  "postStartCommand": "flask --debug run",
  "portsAttributes": {
    "5000": {
      "label": "Flask App",
      "onAutoForward": "openPreview"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": ["ms-python.python"]
    }
  }
}
